<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ TIP: If the pairing code disappears when entering it, use split-screen mode to keep both apps visible at once!"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"
        android:background="#E8F5E9"
        android:padding="8dp" />

    <EditText
        android:id="@+id/pairingCodeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pairing_code_hint"
        android:inputType="number"
        android:maxLength="6"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/pairingPortInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pairing_port_hint"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:importantForAutofill="no" />

</LinearLayout>
